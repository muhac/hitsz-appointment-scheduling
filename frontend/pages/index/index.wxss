/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  position: absolute;
  bottom: 10rpx;
}



.button {
  margin: 50rpx;
  padding: 20rpx 50rpx;
  border-style: solid;
  border-width: 1rpx;
  border-color: #aaa;
  border-radius: 20rpx;
}

.buttonHover {
  margin: 50rpx;
  padding: 20rpx 50rpx;
  border-style: solid;
  border-width: 1rpx;
  border-color: #aaa;
  background: lightblue;
  color: white;
  border-radius: 20rpx;
}

.options {
  margin-top: 100rpx;
}